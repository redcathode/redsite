---
import ButtonImage from './button/ButtonImage.astro';
import Button from './button/Button.astro';

---
<div class="button-list">
    <Button path="red.png" alt="the text 'red is purple' on a purple background" site="/add-button" />
    <Button path="slonk.apng" alt="an animation alternating between the shell prompt [slonk ~]$ and the text 'slonk.ing,' with some purple-and-white decorations on the top and bottom" site="//slonk.ing" />
    <Button path="nikolan.png" alt="'nikolan' on a green background" site="//nikolan.xyz" />
    <!-- <Button path="//coolelectronics.me/ce88x31.png" alt="'velzie' next to pixel art of lamp lighter from oneshot, with what seems like a gallon jug of coffee in hand, staring out into a corru.observer-esque void" site="//coolelectronics.me/" /> -->
    <Button path="unnick.png" alt="the text 'beep boop bip bop :3 ^w^ mrrp' next to a drawing of (i think?) unnick's fursona" site="//unnick.mice.tel" />
    <Button path="sleepy.png" alt="the text 'sleepy.ink' on a rainbow gradient background" site="//sleepy.ink/about.html" />
    <Button path="//authenyo.xyz/images/button.gif" alt="the text 'authen' next to a spinning cube of (i think) a blurry picture of authen's cat" site="//authenyo.xyz" />
    <Button path="760ce.png" alt="760ce's uuid with neko arc by the side" site="//760ceb3b9c0ba4872cadf3ce35a7a494.neocities.org/" />
    <Button path="lars.png" alt="'hi i'm lars' next to lars' profile pic as of 2024-06-17" site="//larsfrommars.neocities.org" />
    <Button path="essem.png" alt="the text 'essem' next to a drawing of essem's profile pic" site="//essem.space" />
    <Button path="maia.crimew.gay.png" alt="the text maia.crimew.gay next to pixel art of a white cat with black spots" site="//maia.crimew.gay/" />
    <Button path="//ssi.fyi/88x31.gif" alt="'server scanning inc' in minecraft font with a green radar spinning around in the background" site="//ssi.fyi" />
    <Button path="//corru.observer/8831.gif" alt="an animation that displays pixel art of what looks like a close-up of a face before switching to the text 'corru.observer' next to a barcode with a corrucyst in the background" site="//corru.observer" />
    <Button path="eighty.png" alt="the text 'eightyeightthirty.one' overlaid over several differently-colored spheres" site="//eightyeightthirty.one" />
    <ButtonImage path="adhd.png" alt="'adhd' on a white-and-yellow background" />
    <iframe src="//incr.easrng.net/badge?key=b0vik" style="background: url(//incr.easrng.net/bg.gif)" title="increment badge" width="88" height="31" frameborder="0"></iframe>
    <Button path="arch.gif" alt="the text 'archlinux' next to the old arch linux logo" site="//archlinux.org/" />
    <Button path="rockbox.png" alt="the rockbox logo" site="//www.rockbox.org/" />
</div>

<style>
    .button-list {
        image-rendering: pixelated;
        text-align: center;
    }
</style>