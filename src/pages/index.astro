---
import Layout from "../layouts/Layout.astro";
import Buttons from "../components/Buttons.astro";
import Yapping from "../components/Yapping.astro";
---

<Layout
	title="redcathode"
	description="personal website/bio/list of contact info"
>
	<main>
		<Yapping />
		<br />
		<Buttons />
		<br />
		<iframe
			src="https://john.citrons.xyz/embed?ref=redcatho.de"
			style="margin-left:auto;display:block;margin-right:auto;max-width:732px;width:100%;height:94px;border:none;"
		></iframe>
		<hr class="footer-divider" />
		
	</main>
</Layout>

<style is:global>
	main {
		max-width: calc(100% - 2rem);
		color: #d0d0d0;
		height: 100%;
		overflow: auto;
		position: relative;
		max-width: calc(100% - 80px);
		width: 60rem;
		margin: 40px auto;
		z-index: 5;
		background-color: rgba(68, 71, 90, 0.94);
		border: 2px solid rgba(60, 62, 74, 0.94);
		border-radius: 0px;
		padding: 20px;
		letter-spacing: 1px;
	}
</style>
